{
	"compilerOptions": {
		"baseUrl": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["dom", "es5", "es6"],
		"module": "amd",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"paths": {
			"@infor/sohoxi-angular": ["./scripts/typings/soho"],
			"sample-shared-usercontext": ["./infor.sample.sharedmodule/sample-shared-usercontext"]
		},
		"removeComments": false,
		"rootDirs": ["."],
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es5",
		"typeRoots": ["./scripts/typings", "../node_modules/@types"],
		"types": ["jquery", "systemjs", "infor", "soho", "lime"]
	},
	"exclude": ["./**/*-aot.ts"]
}